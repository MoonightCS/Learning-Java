<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="client" class="ru.popov.bodya.Client">
        <constructor-arg value="1"/>
        <constructor-arg value="John Smith"/>
    </bean>

    <bean id="cacheLogger" class="ru.popov.bodya.CacheFileEventLogger" destroy-method="destroy">
        <constructor-arg type="java.lang.String" value ="/Users/bogdanpopov/Desktop/learning-java/spring framework/Spring first try/resources/file.txt"/>
        <constructor-arg type="int" value="4"/>
    </bean>

    <bean id="eventLogger" class="ru.popov.bodya.ConsoleEventLogger"/>

    <bean id="fileEventLogger" class="ru.popov.bodya.FileEventLogger"  init-method="init">
        <constructor-arg value="/Users/bogdanpopov/Desktop/learning-java/spring framework/Spring first try/resources/file.txt" />
    </bean>


    <bean id="app" class="ru.popov.bodya.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="fileEventLogger"/>
    </bean>

    <bean id="event" class="ru.popov.bodya.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg>
            <bean class="java.text.DateFormat" factory-method="getDateTimeInstance"/>
        </constructor-arg>
    </bean>




</beans>


